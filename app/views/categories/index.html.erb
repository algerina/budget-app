<section>

  <h2 class="text-center mb-3">Categories</h2>
<div >
      <ul>          
    <% @categories.each do |category| %>
          <li>
        <%= link_to add_expense_path(category.name) do %>
            <%= user.name %>
            <%= category.name %>
            <%= category.icon %>
        <% end %> 
          </li>
    <% end %>
      </ul>     
  </div>
<div class="text-center d-grid gap-2">
  <%= link_to "New category", new_category_path, class:'btn btn-primary btn-lg' %>
</div>

</div>
